<!DOCTYPE html>
<%- include ('partials/header'); -%>
<html>

<body>
    <form method="POST">
        <div class='container'>
            <div class='jumbotron'>
                Username: <input type="text" name="username">
                <br>
                Password: <input type="password" name="password">
                <br>
                <button>
                    Login
                </button>
            </div>
        </div>
    </form>
    
    <% if (typeof loginError != "undefined" && loginError) { %>
        <h3 class="error">Invalid Login!</h3>
    <% }%>
    
</body>

</html>