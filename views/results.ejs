<!DOCTYPE html>
<html>
    <%- include('partials/header') -%>
    <body>

        <h1> Pixabay Search Results </h1>
        
        <form action="/results" method="GET">
            
            Keyword: <input type="text" name="keyword">
            <button> Search! </button> <br>
            Orientation: 
            <select id="orientation">
              <option value="Horizontal">Horizontal</option>
              <option value="Vertical">Vertical</option>
            </select>
            
        </form> <br>
        
        <%let index1 = Math.floor(Math.random() * 15);%>
        <%let index2 = Math.floor(Math.random() * 15);%>
        <%let index3 = Math.floor(Math.random() * 15);%>
        <%let index4 = Math.floor(Math.random() * 15);%>
        
        <span><%=images.hits[index1].likes%></span><br>
        <img src='<%= images.hits[index1].largeImageURL %>' width='250'>
        <br><br>
        
        <span><%=images.hits[index2].likes%></span><br>
        <img src='<%= images.hits[index2].largeImageURL %>' width='250'>
        <br><br>
        
        <span><%=images.hits[index3].likes%></span><br>
        <img src='<%= images.hits[index3].largeImageURL %>' width='250'>
        <br><br>
        
        <span><%=images.hits[index4].likes%></span><br>
        <img src='<%= images.hits[index4].largeImageURL %>' width='250'>
        <br><br>

    </body>
</html>